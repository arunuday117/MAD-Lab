<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/label_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Name" />

    <EditText
        android:id="@+id/name"
        android:layout_width="333dp"
        android:layout_height="59dp"
        android:layout_toRightOf="@+id/label_name"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/label_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:layout_below="@+id/label_name"
        android:padding="15dp"/>

    <EditText
        android:id="@+id/contact"
        android:layout_width="332dp"
        android:layout_height="55dp"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/label_contact"
        android:ems="10"
        android:inputType="textPersonName" />
    <TextView
        android:id="@+id/label_dob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DOB"
        android:layout_below="@+id/label_contact"
        android:padding="25dp"/>

    <EditText
        android:id="@+id/dob"
        android:layout_width="333dp"
        android:layout_height="66dp"
        android:layout_below="@+id/contact"
        android:layout_toRightOf="@+id/label_dob"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dob"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="75dp"
        android:text="INSERT" />

    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dob"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="76dp"
        android:layout_toRightOf="@+id/insert"
        android:text="UPDATE" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dob"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="76dp"
        android:layout_toRightOf="@+id/update"
        android:text="DELETE" />

    <Button
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dob"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="78dp"
        android:layout_toRightOf="@+id/delete"
        android:text="VIEW" />


</RelativeLayout>
